{
  "name": "canadian-dental-care-plan",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "postinstall": "patch-package --patch-dir other/patches",
    "build": "run-p build:client build:server",
    "build:client": "remix build",
    "build:server": "esbuild --format=esm --platform=node --outdir=build ./express.server.ts",
    "dev": "run-p dev:client dev:server",
    "dev:client": "remix dev --manual --command \"node --watch-path ./build/express.server.js --watch ./build/express.server.js ./build/index.js\"",
    "dev:server": "cross-env NODE_ENV=development npm run-script build:server -- --watch",
    "start": "cross-env NODE_ENV=production node ./build/express.server.js ./build/index.js",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "check:all": "npm run-script lint && npm run-script typecheck",
    "lint": "eslint --ignore-path ./.gitignore --cache --cache-location ./node_modules/.cache/eslint ./",
    "typecheck": "tsc",
    "test:all": "npm run-script test:unit run && npm run-script test:e2e",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui --coverage.enabled=true"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@faker-js/faker": "^8.4.1",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@hcaptcha/react-hcaptcha": "^1.10.1",
    "@mswjs/data": "^0.16.1",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.49.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.49.1",
    "@opentelemetry/sdk-metrics": "^1.22.0",
    "@opentelemetry/sdk-node": "^0.49.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@remix-run/css-bundle": "^2.8.0",
    "@remix-run/node": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "@remix-run/serve": "^2.8.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.3",
    "fast-json-patch": "^3.1.1",
    "i18next": "^23.10.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-backend": "^2.5.0",
    "isbot": "^5.1.1",
    "jose": "^5.2.2",
    "libphonenumber-js": "^1.10.57",
    "moderndash": "^3.11.0",
    "moize": "^6.1.6",
    "morgan": "^1.10.0",
    "msw": "^2.2.2",
    "notistack": "^3.0.1",
    "patch-package": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "react-idle-timer": "^5.7.2",
    "redis": "^4.6.13",
    "remix-toast": "^1.2.0",
    "source-map-support": "^0.5.21",
    "tailwind-merge": "^2.2.1",
    "undici": "^6.7.0",
    "validator": "^13.11.0",
    "web-streams-node": "^0.4.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@remix-run/dev": "^2.8.0",
    "@remix-run/testing": "^2.8.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest-axe": "^3.5.9",
    "@types/jsdom": "^21.1.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/source-map-support": "^0.5.10",
    "@types/validator": "^13.11.9",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "jest-axe": "^8.0.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "remix-flat-routes": "^0.6.4",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 256,
    "importOrder": [
      "^react$",
      "^@testing-library/(.*)$",
      "^@remix(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^[(.|~)/]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}
