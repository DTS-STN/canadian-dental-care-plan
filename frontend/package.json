{
  "name": "canadian-dental-care-plan",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-p build:client build:server",
    "build:client": "remix build",
    "build:server": "esbuild --bundle --outdir=build --platform=node ./express.server.ts",
    "dev": "run-p dev:client dev:server",
    "dev:client": "remix dev --manual --command \"node --watch-path ./build/express.server.js --watch ./build/express.server.js ./build/index.js\"",
    "dev:server": "cross-env NODE_ENV=development npm run-script build:server -- --watch",
    "start": "cross-env NODE_ENV=production node ./build/express.server.js ./build/index.js",
    "format": "prettier --write ./",
    "check:all": "npm run-script lint && npm run-script typecheck",
    "lint": "eslint --ignore-path ./.gitignore --cache --cache-location ./node_modules/.cache/eslint ./",
    "typecheck": "tsc",
    "test:all": "npm run-script test:unit run && npm run-script test:e2e",
    "test:e2e": "playwright test",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@remix-run/css-bundle": "^2.5.0",
    "@remix-run/node": "^2.5.0",
    "@remix-run/react": "^2.5.0",
    "@remix-run/serve": "^2.5.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "i18next": "^23.7.16",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-backend": "^2.4.2",
    "isbot": "^4.4.0",
    "morgan": "^1.10.0",
    "msw": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "source-map-support": "^0.5.21",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@remix-run/dev": "^2.5.0",
    "@remix-run/eslint-config": "^2.5.0",
    "@remix-run/testing": "^2.5.0",
    "@testing-library/react": "^14.1.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest-axe": "^3.5.9",
    "@types/jsdom": "^21.1.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/source-map-support": "^0.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "jest-axe": "^8.0.0",
    "jsdom": "^23.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/.cache/**",
      "**/build/**",
      "**/node_modules/**",
      "**/public/build/**"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "extends": [
      "@remix-run/eslint-config",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 256,
    "importOrder": [
      "^react$",
      "^@testing-library/(.*)$",
      "^@remix(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^[(.|~)/]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}
