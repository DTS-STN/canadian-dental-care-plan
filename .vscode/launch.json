  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CDCP frontend",
      "command": "npm run dev",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/frontend/"
    },
    {
      "name": "Debug CDCP frontend unit tests",
      "command": "npm run test:unit",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/frontend/"
    },
    {
      "name": "Debug CDCP API",
      "request": "launch",
      "type": "java",
      "cwd": "${workspaceFolder}/backend/",
      "args": "--spring.profiles.active=local",
      "mainClass": "ca.gov.dtsstn.cdcp.api.Application"
    }
  ]
}
